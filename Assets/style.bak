/* Universal Code */
* {
    
}

/* Root - Color Variables */
:root {

}

/* Header */
.container-header {
    display: flex;
    justify-content:space-around;

}

/* Business Process Automation Expert & Full Stack Web Developer
About Me Work Contact Me Resume */
.top-header {
display: flex;
}

.firstname {
    font-size: 45px;
}

/* Professional Headshot */
img {
    background-color: #eaeaed;
    border: 5px solid #e8630a;
    border-radius: 75%;
    width: 250px;
    float: right;
}

/* Navigation Bar */
nav {
    background-color: #142d4c;
    list-style-type: none;
    margin: 0;
    padding: 5px;
    border-radius: 5px;

}

/* Navagation Options */
nav a {
    color: white;
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

/* Hovering response for navigation options */
nav a:hover {
    background-color: #9fd3c7;
    color: #142d4c;
    font-weight: bolder;
}

/* Main - About Me, Work, Contact Me Sections */
.container {
    background-color: #385170;
    color: #ececec;
    border-radius: 5px;
}
/* about me section */
.container-about {
    display: flex;
        align-items: center;
    margin: 0 auto;
    width: 95%;
    justify-content: space-between;
    height: 85px;
    /* adjust with flex direction and media queries */
    flex-wrap:wrap;
}
#aboutme {
    flex-basis: 15%;
    border-right: 5px solid #142d4c;
    background-color: #9fd3c7;
    color: #142d4c;
    font-weight: bolder;
    display: block;
    text-align: center;

}

.aboutdetails {
    flex-basis: 80%;
}




